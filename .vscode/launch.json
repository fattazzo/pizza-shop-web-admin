  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chome con CORS disabilitato",
      "runtimeExecutable": "/usr/bin/chromium",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--disable-web-security",
        "--user-data-dir='/tmp'",
        "--remote-debugging-port=9222"
      ]
    }
  ]
}
